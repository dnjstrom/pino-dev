{
  "name": "pino-dev",
  "version": "1.0.0",
  "description": "A simple prettifier for pino with built-in support for commonly used ecosystem packages.",
  "author": "Daniel Str√∂m <D@nielstrom.se>",
  "license": "ISC",
  "main": "dist/index.js",
  "bin": {
    "pino-dev": "dist/bin.js"
  },
  "scripts": {
    "dev": "clear; ts-node-dev --inspect --clear --rs test/utils/dev.ts",
    "test": "jest",
    "test:watch": "jest -w",
    "test:update-snapshots": "jest -u",
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "eslint '*/**/*.ts' --fix",
    "build:release": "npm test && NODE_ENV=production npm run build && npm publish",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {},
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dnjstrom/pino-dev"
  },
  "bugs": {
    "url": "https://github.com/dnjstrom/pino-dev/issues"
  },
  "homepage": "https://github.com/dnjstrom/pino-dev#readme",
  "keywords": [
    "pino",
    "pretty-printer",
    "ndjson",
    "logger",
    "transport"
  ],
  "devDependencies": {
    "@types/args": "^3.0.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/pump": "^1.1.0",
    "@types/readable-stream": "^2.3.9",
    "@types/split2": "^2.1.6",
    "@types/strip-ansi": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^5.0.6",
    "pinst": "^2.1.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@hapi/bourne": "^2.0.0",
    "args": "^5.0.1",
    "chalk": "^2.4.2",
    "date-fns": "^2.16.1",
    "debug": "^4.3.1",
    "joycon": "^2.2.5",
    "pump": "^3.0.0",
    "readable-stream": "^2.3.7",
    "split2": "^2.2.0",
    "strip-ansi": "^6.0.0"
  }
}
